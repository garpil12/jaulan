import sqlite3
import logging
from datetime import datetime
import pytz
from cryptography.fernet import Fernet
from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import (
    ApplicationBuilder, CommandHandler, CallbackQueryHandler,
    MessageHandler, ContextTypes, filters
)

# ================= CONFIG =================
TOKEN = "8493844166:AAEN5c-Pu2jxzsuk8Di056hStdZixIjk1iY"
OWNER_IDS = [6361374151, 8209644174]
SECRET_KEY = b'0mBl7VBelC7fPvZsjj0l6RGxHDwrjlHZixYWUC68gPU='
WIB = pytz.timezone("Asia/Jakarta")
LOGS_CHAT_ID = -1003724444499
PAYMENT_INFO = """üí≥ PAYMENT INFO üí≥
- QR: https://ibb.co.com/7t54RddV
- Shopeepay: 081219623569 A/n rifkxxx
"""

cipher = Fernet(SECRET_KEY)
logging.basicConfig(level=logging.INFO)

def now_wib():
    return datetime.now(WIB).strftime("%d-%m-%Y %H:%M:%S WIB")

def encrypt(text):
    return cipher.encrypt(text.encode()).decode()

def decrypt(text):
    return cipher.decrypt(text.encode()).decode()

# ================= DATABASE =================
conn = sqlite3.connect("store.db", check_same_thread=False)
cursor = conn.cursor()

cursor.execute("CREATE TABLE IF NOT EXISTS users (user_id INTEGER PRIMARY KEY)")
cursor.execute("CREATE TABLE IF NOT EXISTS admins (user_id INTEGER PRIMARY KEY)")
cursor.execute("""CREATE TABLE IF NOT EXISTS categories (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nama TEXT UNIQUE
)""")
cursor.execute("""CREATE TABLE IF NOT EXISTS products (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nama TEXT,
    harga INTEGER,
    stok INTEGER,
    kategori_id INTEGER,
    deskripsi TEXT,
    file TEXT
)""")
cursor.execute("""CREATE TABLE IF NOT EXISTS transactions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    user_id INTEGER,
    product_id INTEGER,
    status TEXT,
    tanggal TEXT
)""")
conn.commit()

# ================= ROLE =================
def is_owner(uid):
    return uid in OWNER_IDS

def is_admin(uid):
    cursor.execute("SELECT * FROM admins WHERE user_id=?", (uid,))
    return cursor.fetchone() or is_owner(uid)

# ================= START =================
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    uid = update.effective_user.id
    cursor.execute("INSERT OR IGNORE INTO users VALUES (?)", (uid,))
    conn.commit()

    cursor.execute("SELECT * FROM categories")
    cats = cursor.fetchall()
    keyboard = [[InlineKeyboardButton(c[1], callback_data=f"cat_{c[0]}")] for c in cats]

    await update.message.reply_text(
        "üî• WELCOME TO GARFIELD STORE üî•\nPilih kategori:",
        reply_markup=InlineKeyboardMarkup(keyboard)
    )

# ================= OWNER COMMANDS =================
# ----- Tambah Kategori -----
async def addkategori(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    if not context.args:
        await update.message.reply_text("Gunakan format:\n/addkategori NamaKategori")
        return
    nama = " ".join(context.args)
    cursor.execute("INSERT OR IGNORE INTO categories (nama) VALUES (?)", (nama,))
    conn.commit()
    await update.message.reply_text(f"‚úÖ Kategori '{nama}' berhasil ditambahkan.")

# ----- Hapus Kategori -----
async def delkategori(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    if not context.args:
        await update.message.reply_text("Gunakan format:\n/delkategori IDKategori")
        return
    try:
        cat_id = int(context.args[0])
        cursor.execute("DELETE FROM categories WHERE id=?", (cat_id,))
        conn.commit()
        await update.message.reply_text(f"‚ùå Kategori ID {cat_id} berhasil dihapus.")
    except:
        await update.message.reply_text("Format salah, masukkan ID kategori sebagai angka.")

# ----- List Kategori -----
async def listkategori(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    cursor.execute("SELECT * FROM categories")
    cats = cursor.fetchall()
    if not cats:
        await update.message.reply_text("Belum ada kategori.")
        return
    text = "üìÇ Daftar Kategori:\n"
    for c in cats:
        text += f"ID: {c[0]} | Nama: {c[1]}\n"
    await update.message.reply_text(text)

# ----- Tambah Produk (Flexible Nama) -----
async def addproduk(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    try:
        data = update.message.text.split(" ", 1)[1]  # ambil semua setelah /addproduk
        parts = data.split("|")
        if len(parts) < 5:
            await update.message.reply_text(
                "Format salah.\nContoh:\n/addproduk Nama|Harga|Stok|KategoriID|Deskripsi"
            )
            return
        # Nama bisa mengandung |, ambil semua sebelum 4 bagian terakhir
        nama = "|".join(parts[:-4]).strip()
        harga = parts[-4].replace(".", "").replace(",", "").strip()
        stok = parts[-3].strip()
        kategori_id = parts[-2].strip()
        deskripsi = parts[-1].strip()
        cursor.execute(
            "INSERT INTO products (nama, harga, stok, kategori_id, deskripsi, file) VALUES (?, ?, ?, ?, ?, ?)",
            (nama, int(harga), int(stok), int(kategori_id), deskripsi, encrypt(""))
        )
        conn.commit()
        await update.message.reply_text(f"‚úÖ Produk '{nama}' berhasil ditambahkan.")
    except Exception as e:
        logging.error(f"Error addproduk: {e}")
        await update.message.reply_text(
            "Terjadi kesalahan.\nFormat yang benar:\n/addproduk Nama|Harga|Stok|KategoriID|Deskripsi"
        )

# ----- Hapus Produk -----
async def delproduk(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    if not context.args:
        await update.message.reply_text("Gunakan format:\n/delproduk IDProduk")
        return
    try:
        prod_id = int(context.args[0])
        cursor.execute("DELETE FROM products WHERE id=?", (prod_id,))
        conn.commit()
        await update.message.reply_text(f"‚ùå Produk ID {prod_id} berhasil dihapus.")
    except:
        await update.message.reply_text("Format salah, masukkan ID produk sebagai angka.")

# ----- List Produk Owner -----
async def listproduk_owner(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.effective_user.id):
        await update.message.reply_text("Khusus owner.")
        return
    cursor.execute("""SELECT p.id, p.nama, p.harga, p.stok, c.nama, p.deskripsi 
                      FROM products p LEFT JOIN categories c ON p.kategori_id=c.id""")
    prods = cursor.fetchall()
    if not prods:
        await update.message.reply_text("Belum ada produk.")
        return
    text = "üì¶ Daftar Produk:\n"
    for p in prods:
        text += f"ID: {p[0]} | Nama: {p[1]} | Harga: Rp{p[2]} | Stok: {p[3]} | Kategori: {p[4]}\nDeskripsi: {p[5]}\n\n"
    await update.message.reply_text(text)

# ================= LIST PRODUK USER =================
async def list_produk(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    if query.data.startswith("cat_"):
        cat_id = int(query.data.split("_")[1])
        cursor.execute("SELECT * FROM products WHERE kategori_id=?", (cat_id,))
        data = cursor.fetchall()
        if not data:
            await query.edit_message_text("Produk kosong di kategori ini.")
            return
        keyboard = [
            [InlineKeyboardButton(f"{p[1]} | Rp{p[2]} | Stok:{p[3]}", callback_data=f"detail_{p[0]}")]
            for p in data
        ]
        keyboard.append([InlineKeyboardButton("üîô Kembali", callback_data="start")])
        await query.edit_message_text("üì¶ LIST PRODUK:", reply_markup=InlineKeyboardMarkup(keyboard))
    else:
        await query.edit_message_text("Kategori tidak ditemukan.")

# ----- DETAIL PRODUK -----
async def detail_produk(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    pid = int(query.data.split("_")[1])
    cursor.execute("SELECT * FROM products WHERE id=?", (pid,))
    p = cursor.fetchone()
    if not p:
        await query.edit_message_text("Produk tidak ditemukan.")
        return
    keyboard = [
        [InlineKeyboardButton("üõí BELI", callback_data=f"buy_{pid}")],
        [InlineKeyboardButton("üîô Kembali", callback_data=f"cat_{p[4]}")]
    ]
    await query.edit_message_text(
        f"üì¶ {p[1]}\nHarga: Rp{p[2]}\nStok: {p[3]}\nDeskripsi: {p[5]}\n\n{PAYMENT_INFO}",
        reply_markup=InlineKeyboardMarkup(keyboard)
    )

# ================= TRANSAKSI =================
async def buy(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    uid = query.from_user.id
    pid = int(query.data.split("_")[1])
    cursor.execute("SELECT * FROM transactions WHERE user_id=? AND status='PENDING'", (uid,))
    if cursor.fetchone():
        await query.answer("Masih ada transaksi pending!", show_alert=True)
        return
    cursor.execute("SELECT stok FROM products WHERE id=?", (pid,))
    stok = cursor.fetchone()[0]
    if stok <= 0:
        await query.answer("Stok habis!", show_alert=True)
        return
    cursor.execute(
        "INSERT INTO transactions (user_id,product_id,status,tanggal) VALUES (?,?,?,?)",
        (uid, pid, "PENDING", now_wib())
    )
    conn.commit()
    await query.edit_message_text("Silakan transfer & kirim foto bukti.\nStatus: PENDING")

async def bukti(update: Update, context: ContextTypes.DEFAULT_TYPE):
    uid = update.message.from_user.id
    cursor.execute("SELECT * FROM transactions WHERE user_id=? AND status='PENDING'", (uid,))
    trx = cursor.fetchone()
    if not trx:
        await update.message.reply_text("Tidak ada transaksi pending.")
        return
    keyboard = [[
        InlineKeyboardButton("‚úÖ ACC", callback_data=f"acc_{trx[0]}"),
        InlineKeyboardButton("‚ùå CANCEL", callback_data=f"cancel_{trx[0]}")
    ]]
    admins = OWNER_IDS.copy()
    cursor.execute("SELECT user_id FROM admins")
    for a in cursor.fetchall():
        admins.append(a[0])
    for admin_id in set(admins):
        try:
            await context.bot.send_photo(
                admin_id,
                photo=update.message.photo[-1].file_id,
                caption=f"User: {uid}\nTRX ID: {trx[0]}\n{now_wib()}",
                reply_markup=InlineKeyboardMarkup(keyboard)
            )
        except:
            pass
    await update.message.reply_text("Bukti dikirim ke admin/owner. Silakan tunggu ACC.")

# ----- ACC / CANCEL -----
async def acc(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    if not is_admin(query.from_user.id):
        await query.answer("Kamu bukan admin/owner!", show_alert=True)
        return
    trx_id = int(query.data.split("_")[1])
    cursor.execute("SELECT user_id, product_id FROM transactions WHERE id=?", (trx_id,))
    row = cursor.fetchone()
    if not row:
        await query.edit_message_caption("Transaksi tidak ditemukan.")
        return
    uid, pid = row
    cursor.execute("SELECT file FROM products WHERE id=?", (pid,))
    encrypted_file = cursor.fetchone()[0]
    decrypted = decrypt(encrypted_file)
    lines = decrypted.split("\n")
    item = lines[0] if lines and lines[0] != "" else "Produk"
    remaining = "\n".join(lines[1:]) if len(lines) > 1 else ""
    cursor.execute("UPDATE products SET file=?, stok=stok-1 WHERE id=?", (encrypt(remaining), pid))
    cursor.execute("UPDATE transactions SET status='SUCCESS' WHERE id=?", (trx_id,))
    conn.commit()
    await context.bot.send_message(uid, f"‚úÖ Transaksi berhasil!\nProduk: {item}\nStatus: SUCCESS\nTerima kasih sudah membeli.")
    await query.edit_message_caption("‚úÖ Transaksi ACC")

async def cancel(update: Update, context: ContextTypes.DEFAULT_TYPE):
    query = update.callback_query
    await query.answer()
    if not is_admin(query.from_user.id):
        await query.answer("Kamu bukan admin/owner!", show_alert=True)
        return
    trx_id = int(query.data.split("_")[1])
    cursor.execute("SELECT user_id FROM transactions WHERE id=?", (trx_id,))
    uid = cursor.fetchone()[0]
    cursor.execute("UPDATE transactions SET status='CANCEL' WHERE id=?", (trx_id,))
    conn.commit()
    await context.bot.send_message(uid, f"‚ùå Transaksi dibatalkan.\nTRX ID: {trx_id}")
    await query.edit_message_caption("‚ùå Transaksi CANCEL")

# ================= BROADCAST =================
async def broadcast(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if not is_owner(update.message.from_user.id):
        return
    text = " ".join(context.args)
    cursor.execute("SELECT user_id FROM users")
    users = cursor.fetchall()
    for u in users:
        try:
            await context.bot.send_message(u[0], text)
        except:
            pass
    await update.message.reply_text("Broadcast selesai.")

# ================= HELP =================
async def help_cmd(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = f"""
üî• GARFIELD STORE BOT üî•

üìå Commands Owner:
/addkategori NamaKategori - Tambah kategori
/delkategori IDKategori - Hapus kategori
/listkategori - List semua kategori
/addproduk Nama|Harga|Stok|KategoriID|Deskripsi - Tambah produk
/delproduk IDProduk - Hapus produk
/listproduk - List semua produk
/broadcast Pesan - Broadcast ke semua user
/help - Panduan

üí≥ Payment Info:
{PAYMENT_INFO}
"""
    await update.message.reply_text(text)

# ================= MAIN =================
app = ApplicationBuilder().token(TOKEN).build()

# Command handlers
app.add_handler(CommandHandler("start", start))
app.add_handler(CommandHandler("addkategori", addkategori))
app.add_handler(CommandHandler("delkategori", delkategori))
app.add_handler(CommandHandler("listkategori", listkategori))
app.add_handler(CommandHandler("addproduk", addproduk))
app.add_handler(CommandHandler("delproduk", delproduk))
app.add_handler(CommandHandler("listproduk", listproduk_owner))
app.add_handler(CommandHandler("broadcast", broadcast))
app.add_handler(CommandHandler("help", help_cmd))

# CallbackQuery
app.add_handler(CallbackQueryHandler(list_produk, pattern="cat_"))
app.add_handler(CallbackQueryHandler(detail_produk, pattern="detail_"))
app.add_handler(CallbackQueryHandler(buy, pattern="buy_"))
app.add_handler(CallbackQueryHandler(acc, pattern="acc_"))
app.add_handler(CallbackQueryHandler(cancel, pattern="cancel_"))

# Photo handler
app.add_handler(MessageHandler(filters.PHOTO, bukti))

app.run_polling()
